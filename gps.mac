# Macro file for the 
# initialization of G4GeneralParticleSource


/gps/energy 50 GeV
/gps/particle gamma

/gps/pos/type Plane
/gps/pos/shape Square
/gps/pos/halfx 0.5 cm
/gps/pos/halfy 0.5 cm

/gps/ang/type beam2d
/gps/ang/focuspoint 0 0 1.50 m
/gps/ang/sigma_x 0.5 mrad
/gps/ang/sigma_y 0.5 mrad

/gps/direction 0. 0. 1.

#/tracking/verbose 1
/run/beamOn 10
